<!DOCTYPE html>
<html style="width: 100%; height: 100%; margin: 0">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <script src="~/lib/lodash/dist/lodash.js" type="text/javascript"></script>
    <script src="~/lib/angular/angular.js" type="text/javascript"></script>
    <script src="~/lib/ng-reflux/immutable-state-mixin.min.js" type="text/javascript"></script>
    <script src="~/lib/ng-reflux/reflux-angular.min.js" type="text/javascript"></script>
    <script src="~/lib/angular-simple-logger/dist/angular-simple-logger.js" type="text/javascript"></script>
    <script src="~/lib/angular-google-maps/dist/angular-google-maps.js" type="text/javascript"></script>
    <script src="//maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>
</head>
<body style="height: 100%; width: 100%; margin: 0" ng-app="trackwane">
	<style type="text/css">
		body {font-family: 'Lucida Sans Unicode', 'Lucida Sans'}
		.top-navigation {height: 50px; background-color: #333; color: white; display: flex; border-bottom: 5px solid #242424}
		.top-navigation .logo {font-size: 25px; margin-left: 20px; margin-top: 5px}
		.top-navigation .links {font-size: 13px; margin-left: 290px; margin-top: 18px}
		.top-navigation a {
			color: white; text-decoration: none
		}
		.top-navigation a:hover {
			color: orange
		}
		.top-navigation .menu {text-align: right; flex: 1}
		.top-navigation .menu a {font-size: 12px; top: -20px; margin-right: 10px; position: relative}
		.top-navigation .menu img {height: 50px}
		.container {height: 100%; display: flex; flex-direction: column}
		.viewport {display: flex; flex: 1}
		.footer {background-color: #333333; color: white; font-size: 11px; padding: 5px; text-align: center; border-top: 3px solid #242424}
		.footer a {color: white; text-decoration: none}
	</style>
	<div class="container body-content">
        <div class="top-navigation">
			<div class="logo">trackwane</div>
			<div class="links">
				<a href="/data/dashboard">Data</a>
				| <a href="/accesscontrol/dashboard">Access Control</a>
				| <a href="/management/dashboard">Management</a>
				| Analytics
				| <a href="/simulator/dashboard">Simulator</a>
				| <a href="/system/dashboard">System</a>
			</div>
			<div class="menu">
				<a href="#">Account</a>
				<a href="#">Sign Out</a>
				<img src="http://www.gravatar.com/avatar/205e460b479e2e5b48aec07710c08d50" />
			</div>
		</div>
        <div class="viewport">
            @RenderBody()
        </div>
        <div class="footer">
			<div>Wylesight 2016 | <a href="#">Home</a> | <a href="#">Contact</a> | <a href="#">About</a></div>
		</div>
    </div>

    <script type="text/javascript">
        angular.module("trackwane", ['ng.reflux', 'uiGmapgoogle-maps']);
    </script>

<script src="~/js/site.min.js" type="text/javascript"></script>

</body>
</html>
