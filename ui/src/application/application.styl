body
    font-family: 'Lucida Sans Unicode', 'Lucida Sans';

html, body
	height: 100%
	width: 100%
	margin: 0

.top-navigation
    height: 50px
    background-color: #333
    color: white
    display: flex
    border-bottom: 5px solid #242424
	a
	    color: white
		text-decoration: none
    .logo
        font-size: 25px
        margin-left: 20px
        margin-top: 5px
    .links
        font-size: 13px
        margin-left: 290px
        margin-top: 18px
	.menu
		text-align: right
		flex: 1
		a
			font-size: 12px
			top: -20px
			margin-right: 10px
			position: relative
			img
				height: 50px

.container
    height: 100%
    display: flex
    flex-direction: column

.viewport
    display: flex
    flex: 1

.footer
	background-color: #333333
	color: white
	font-size: 11px
	padding: 5px
	text-align: center
	border-top: 3px solid #242424
	a
		color: white
		text-decoration: none
